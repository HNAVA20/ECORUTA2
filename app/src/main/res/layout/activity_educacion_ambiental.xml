<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">


        <!-- Título -->
        <TextView
            style=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Educación Ambiental" />


        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí encontrarás consejos, datos curiosos y buenas prácticas para que aprendas más sobre cómo cuidar el planeta de forma efectiva y sencilla."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />


        <!-- Imagen educativa -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:contentDescription="Banner educativo" />


        <!-- Texto extra opcional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sabías que... reciclar una tonelada de papel puede salvar hasta 17 árboles y 26,000 litros de agua. ¡Pequeñas acciones generan grandes cambios!"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />


        <!-- Botón -->
        <Button
            android:id="@+id/btn_volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al menú" />
    </LinearLayout>
</ScrollView>
